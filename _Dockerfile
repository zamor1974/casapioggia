# syntax=docker/dockerfile:1

FROM golang:1.17
WORKDIR /app

COPY go.mod ./
COPY go.sum ./
RUN go mod download

COPY *.go ./
COPY /config/*.go ./config/
COPY /constants/*.go ./constants/
COPY /controllers/*.go ./controllers/
COPY /lang/*.go ./lang/
COPY /models/*.go ./models/
COPY /target/*.go ./target/
COPY *.go ./
COPY swagger.yaml ./

RUN go build -o /casapioggia

EXPOSE 5555

CMD [ "/casapioggia" ]